}

/* USER CODE BEGIN Header_Start_I2C_TX */
/**
 * @brief Function implementing the I2C_TX thread (single I2C owner).
 */
/* USER CODE END Header_Start_I2C_TX */
void Start_I2C_TX(void *argument)
{
  /* USER CODE BEGIN Start_I2C_TX */
	(void)argument;
	  I2C_TxMsg_t msg;

	  for (;;)
	  {
	    // Prefer high-priority messages; block shortly
	    osStatus_t s = osMessageQueueGet(qI2C_HI, &msg, NULL, 50);
	    if (s != osOK) {
	      // If no HI work arrived, try LOW and block too
	      s = osMessageQueueGet(qI2C_LO, &msg, NULL, 50);
	      if (s != osOK) {
	        // nothing to do; go back to blocking on HI next loop
	        continue;
	      }
	    }

	    uint8_t tries = 0;
	    for (;;)
	    {
	      HAL_StatusTypeDef st = HAL_I2C_Master_Transmit(&hi2c1, msg.addr8,
	                               (uint8_t*)msg.buf, msg.len, msg.timeout_ms);
	      if (st == HAL_OK) break;
	      if (++tries > msg.retries) { HAL_GPIO_TogglePin(GPIOC, GPIO_PIN_13); break; }
	      osDelay(2);
	    }
	  }
  /* USER CODE END Start_I2C_TX */
}

/* USER CODE BEGIN Header_StartADCReadTask */
/**
 * @brief Function implementing the ADCReadTask thread.
 */
/* USER CODE END Header_StartADCReadTask */
void StartADCReadTask(void *argument)
{
