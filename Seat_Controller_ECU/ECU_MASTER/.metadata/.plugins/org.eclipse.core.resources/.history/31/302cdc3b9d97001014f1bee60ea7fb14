/* USER CODE BEGIN PV */
__IO uint16_t g_adc_raw[3] = {0};  // CH3->g_adc_raw[0], CH4->[1], CH5->[2]

/* --------- Queues --------- */
/* High/Low I2C queues (router) */
osMessageQueueId_t qI2C_HI;
osMessageQueueId_t qI2C_LO;
