typedef struct { float inc_deg, hei_deg, dis_deg; } AutoCmd_t;
typedef struct { uint16_t timestamp, counter;} message_t;

/* I2C router message types */
typedef enum {
	I2C_MSG_MANUAL   = 1,   // high priority
	I2C_MSG_HEARTBEAT= 2    // low priority (best-effort)
} I2C_MsgType;

/* I2C router message */
typedef struct {
	I2C_MsgType type;
	uint16_t    addr8;           // 8-bit HAL address (7-bit << 1)
	uint16_t    len;             // <= I2C_TX_MAX
	uint8_t     buf[I2C_TX_MAX]; // inline payload
	uint16_t    timeout_ms;      // per xfer timeout
	uint8_t     retries;         // limited retries on error
} I2C_TxMsg_t;

/* Manual state (kept in sync when AUTO runs) */
static float angle_f_INC = 90.0f;
static float angle_f_HEI = 90.0f;
static float angle_f_DIS = 90.0f;
/* USER CODE END PV */

