#include "../LIB/BIT_MATH.h"
#include "../LIB/STD_TYPES.h"
#include "../MCAL/DIO.h"




void DIO_INIT(u8 PORT_NAME, u8 PIN_NUM, u8 Mode)
{
	switch(PORT_NAME)
	{
	case DIO_PORTA:
		if(Mode == DIO_INPUT)
		{
			CLR_BIT(DDRA, PIN_NUM);
		}
		else if(Mode == DIO_OUTPUT)
		{
			SET_BIT(DDRA, PIN_NUM);
		}
		break;
	case DIO_PORTB:
		if( Mode == DIO_INPUT)
		{
			CLR_BIT(DDRA, PIN_NUM);
		}
		else if(Mode == DIO_OUTPUT)
		{
			SET_BIT(DDRA, PIN_NUM);
		}
		break;
	case DIO_PORTC:
		if( Mode == DIO_INPUT)
		{
			CLR_BIT(DDRA, PIN_NUM);
		}
		else if(Mode == DIO_OUTPUT)
		{
			SET_BIT(DDRA, PIN_NUM);
		}
		break;
	case DIO_PORTD:
		if( Mode == DIO_INPUT)
		{
			CLR_BIT(DDRA, PIN_NUM);
		}
		else if(Mode == DIO_OUTPUT)
		{
			SET_BIT(DDRA, PIN_NUM);
		}
		break;
	}
}
